{
  "version": 2,
  "builds": [
    {
      "src": "src/api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/src/api/webhook.ts"
    },
    {
      "src": "/api/escrow/create",
      "dest": "/src/api/escrow.ts"
    },
    {
      "src": "/api/escrow/release",
      "dest": "/src/api/escrow.ts"
    },
    {
      "src": "/api/payment/initiate",
      "dest": "/src/api/payment.ts"
    },
    {
      "src": "/api/dispute/raise",
      "dest": "/src/api/dispute.ts"
    },
    {
      "src": "/api/jobs/auto-release",
      "dest": "/src/jobs/auto-release.ts"
    },
    {
      "src": "/api/jobs/payment-monitor",
      "dest": "/src/jobs/payment-monitor.ts"
    },
    {
      "src": "/api/jobs/delivery-reminder",
      "dest": "/src/jobs/delivery-reminder.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/jobs/auto-release",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/jobs/payment-monitor",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/jobs/delivery-reminder",
      "schedule": "0 10 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

